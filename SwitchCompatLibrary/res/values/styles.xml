<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="switch_dark">
        <item name="scl_track">@drawable/switch_track_holo_dark</item>
        <item name="scl_thumb">@drawable/switch_inner_holo_dark</item>
        <item name="scl_textOn">@string/textOn</item>
        <item name="scl_textOff">@string/textOff</item>
        <item name="scl_thumbTextPadding">12dip</item>
        <item name="scl_switchMinWidth">96dip</item>
        <item name="scl_switchPadding">16dip</item>
        <item name="scl_switchTextAppearance">@style/TextAppearance</item>
    </style>
    
    <style name="switch_light">
        <item name="scl_track">@drawable/switch_track_holo_light</item>
        <item name="scl_thumb">@drawable/switch_inner_holo_light</item>
        <item name="scl_textOn">@string/textOn</item>
        <item name="scl_textOff">@string/textOff</item>
        <item name="scl_thumbTextPadding">12dip</item>
        <item name="scl_switchMinWidth">96dip</item>
        <item name="scl_switchPadding">16dip</item>
        <item name="scl_switchTextAppearance">@style/TextAppearance</item>
    </style>    	
   
    <style name="TextAppearance">
        <item name="scl_textColor">?android:attr/textColorPrimary</item>
        <item name="scl_textColorHighlight">?android:attr/textColorHighlight</item>
        <item name="scl_textColorHint">?android:attr/textColorHint</item>
        <item name="scl_textColorLink">?android:attr/textColorLink</item>
        <item name="scl_textSize">16sp</item>
    </style>
    
    
</resources>